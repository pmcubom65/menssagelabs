<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mitoolbarmensajes"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"

        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"

        app:contentInsetStartWithNavigation="0dp"></androidx.appcompat.widget.Toolbar>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center_horizontal"
    android:background="@drawable/sky"
    >









    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:padding="0dp"
      >

        <EditText
            android:id="@+id/textoanadir"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Escriba mensaje para enviar"
            android:shadowColor="#ffffff"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorHint="#ffffff" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/botonmandarmensaje"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabCustomSize="56dp"
            app:srcCompat="@drawable/ic_paper_plane"
            tools:ignore="VectorDrawableCompat" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/botonadjunto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:fabCustomSize="56dp"
            app:srcCompat="@android:drawable/stat_sys_upload" />

    </LinearLayout>


</LinearLayout>

</LinearLayout>